[Unit]
Description=NetworkTap Front Panel Display (FR202 ST7789)
After=network-online.target networktap-web.service
Wants=network-online.target

[Service]
Type=simple
ExecStartPre=/bin/sleep 3
ExecStart=/usr/bin/python3 /opt/networktap/scripts/display_status.py
Restart=always
RestartSec=10
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=multi-user.target
